<body>
    <div id="smile-container"></div>

    <script>
        const container = document.getElementById('smile-container');
        const smile = 'üòé';
        const numberOfSmiles = 100; // –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å–º–∞–π–ª–æ–≤

        for (let i = 0; i < numberOfSmiles; i++) {
            const smileElement = document.createElement('div');
            smileElement.className = 'smile';
            smileElement.innerText = smile;
            smileElement.style.left = Math.random() * 100 + 'vw'; // –ü–æ–∑–∏—Ü–∏—è –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏
            smileElement.style.top = Math.random() * 100 + 'vh'; // –ü–æ–∑–∏—Ü–∏—è –ø–æ –≤–µ—Ä—Ç–∏–∫–∞–ª–∏
            smileElement.style.transform = `scale(${Math.random() * 0.5 + 0.5})`; // –°–ª—É—á–∞–π–Ω—ã–π —Ä–∞–∑–º–µ—Ä
            container.appendChild(smileElement);
        }
    </script>
